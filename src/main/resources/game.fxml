<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bomberman.gameController">

    <top>
        <VBox styleClass="header">
            <children>
                <HBox alignment="TOP_LEFT" spacing="50.0">
                    <children>
                        <Label styleClass="controls" text="BOMBERMAN - MULTIJOUEUR LOCAL " />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="50.0">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="15.0" />
                    </padding>
                    <children>
<!--                        image des perso-->
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="30.0">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="15.0" />
                    </padding>
                    <children>
                        <Label styleClass="player-label" text="JOUEUR 1 : 000"  />
                        <Label styleClass="player-label" text="JOUEUR 2 : 000" />
                        <Label fx:id="timerLabel" styleClass="controls" text="TIMEUR : 02:00" />
                        <Label styleClass="player-label" text="JOUEUR 3 : 000" />
                        <Label styleClass="player-label" text="JOUEUR 4 : 000" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="gameContainer" alignment="CENTER">
            <!-- Jeu actif -->
            <VBox fx:id="gameArea" alignment="CENTER" spacing="5.0">
                <Button fx:id="startButton" text="DÃ©marrer le jeu" onAction="#startGame" styleClass="start-button"/>
                <Button  text="RETOUR AU MENU" onAction="#retourMenu" />
                <Label text="LES COMMANDES DE JEU EN MULTIJOUEUR" styleClass="commandeTitle"/>
                <Label text="Joueur 1 (En haut a gauche) = T: haut, G: bas, F: gauche, H: droite, U: Bombe" styleClass="commande"/>
                <Label text="Joueur 2 (En bas a droite) = Z: haut, S: bas, Q: gauche, D: droite, A: Bombe" styleClass="commande"/>
                <Label text="Joueur 3 (En haut a droite) = O: haut, L: bas, K: gauche, M: droite, P: Bombe" styleClass="commande"/>
                <Label text="Joueur 4 (En bas a gauche) = 5: haut, 2: bas, 1: gauche, 3: droite, 4: Bombe" styleClass="commande"/>
            </VBox>
                        <!-- Menu pause transparent -->
            <VBox fx:id="pauseMenuContainer" alignment="CENTER" spacing="20.0"
                  styleClass="menu" visible="false" managed="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
                <Label text="~ PAUSE ~" styleClass="title"/>
                <Button text="REPRENDRE" onAction="#resumeGame" />
                <Button text="RETOUR AU MENU" onAction="#retourMenu" />
                <Button text="QUITTER LE JEU" onAction="#quittertout"/>

                <Label text="LES COMMANDES DE JEU EN MULTIJOUEUR" styleClass="commandeTitle"/>
                <Label text="Joueur 1 (En haut a gauche) = T: haut, G: bas, F: gauche, H: droite, U: Bombe" styleClass="commande"/>
                <Label text="Joueur 2 (En bas a droite) = Z: haut, S: bas, Q: gauche, D: droite, A: Bombe" styleClass="commande"/>
                <Label text="Joueur 3 (En haut a droite) = O: haut, L: bas, K: gauche, M: droite, P: Bombe" styleClass="commande"/>
                <Label text="Joueur 4 (En bas a gauche) = 5: haut, 2: bas, 1: gauche, 3: droite, 4: Bombe" styleClass="commande"/>
            </VBox>
            <!-- Menu pause fin -->
            <VBox fx:id="finMenuContainer" alignment="CENTER" spacing="20.0"
                  styleClass="menu" visible="false" managed="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
                <Label text="~ FIN ~" styleClass="title"/>
                <Label fx:id="messageFinPartieLabel" text=" " styleClass="vainqueur"/>
                <Button  text="REJOUER" onAction="#replayGame" />
                <Button  text="RETOUR AU MENU" onAction="#retourMenu" />
                <Button  text="QUITTER LE JEU" onAction="#quittertout"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>