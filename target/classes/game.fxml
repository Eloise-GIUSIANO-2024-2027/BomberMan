<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bomberman.gameController">

    <top>
        <VBox styleClass="header">
            <children>
                <Label styleClass="title" text="BOMBERMAN - MULTIJOUEUR LOCAL" />
                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Label styleClass="player-label" text="JOUEUR 1 (BLEU)" />
                                <Label styleClass="controls" text="ZQSD pour bouger, ESPACE pour bombe" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <Label styleClass="player-label" text="JOUEUR 2 (ROUGE)" />
                                <Label styleClass="controls" text="Flèches pour bouger, ENTRÉE pour bombe" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="gameAreaStackPane" alignment="CENTER">
            <Button fx:id="startButton" text="Démarrer le jeu" onAction="#startGame" styleClass="start-button"/>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <children>
                <Label styleClass="instructions" text="Détruisez les murs pour trouver des power-ups ! Évitez les explosions !" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>